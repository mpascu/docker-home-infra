# Host configuration
hostname=example.com
SERVER_IP=192.168.0.94 # Local network server IP address

# User configuration
PID=1000
GID=1000
TZ=Europe/Madrid

# Storage configuration
external_storage=/path/to/storage # Storage for media and downloads
internal_storage=/path/to/internal/storage # Storage for calibre 

# Credentials - change all passwords before first deployment
mail=your@mail.com
piholepasswd=changeme
mysql_root_pass=changeme
mysql_user_pass=changeme
postgres_pass=changeme
transmission_pass=changeme
crontab_pass=changeme
calibre_pass=changeme
homarr_secret=generate-64-char-hex-key # openssl rand -hex 32
sftp_user=sftpuser
sftp_pass=changeme
restya_db_pass=changeme
calibre_user=username
calibre_pass=changeme

# Immich (photo management) 
immich_version=release
immich_upload_location=./library
immich_db_user=postgres
immich_db_name=immich
immich_db_pass=changeme

# OpenClaw (Claude AI coding assistant - https://github.com/openclaw/openclaw)
OPENCLAW_IMAGE=openclaw/openclaw:latest
OPENCLAW_GATEWAY_TOKEN=              # Generate a secure token for gateway auth
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790
OPENCLAW_GATEWAY_BIND=lan
OPENCLAW_CONFIG_DIR=                 # Optional: defaults to config/openclaw
OPENCLAW_WORKSPACE_DIR=              # Optional: defaults to config/openclaw/workspace
# Claude API credentials (from claude.ai - for OpenClaw to connect)
CLAUDE_AI_SESSION_KEY=
CLAUDE_WEB_SESSION_KEY=
CLAUDE_WEB_COOKIE=
